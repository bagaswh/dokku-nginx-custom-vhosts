#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x

trigger-nginx-botika-dependencies() {
  declare desc="installs dependencies for the nginx-botika plugin"
  declare trigger="dependencies"

  case "$DOKKU_DISTRO" in
    arch)
      pacman -S --noconfirm --noprogressbar --needed nginx bind-tools
      ;;
  esac
}

# trigger-nginx-botika-dependencies "$@"
echo "dependencies" "$@"